<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
		<% products.forEach(product => { %>
			<%- include('./partials/cardProduct',{
				product
			}) %>
		<% }) %>
			
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->




</body>	
<script>
	const reloadExecuted = false;
	if (!sessionStorage.getItem('reloadExecuted')) {
            setTimeout(function() {
                window.location.reload();
            }, 1000); // Ajusta el tiempo seg√∫n tus necesidades

            // Marca la variable como true para que el script no se ejecute nuevamente
            sessionStorage.setItem('reloadExecuted', 'true');
        }
	reloadExecuted = true;
        
</script>
</html>